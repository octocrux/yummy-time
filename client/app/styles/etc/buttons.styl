.button
  line-height 4rem
  text-align center
  width 100%
  max-width 480px
  margin 0 auto
  display block
  font-size 1.6rem
  font-weight 700
  min-width 240px
  padding 0 15px
  box-shadow 1px 1px 5px 0 rgba(#000,.5)
  transition box-shadow .2s ease-out, background .2s ease-out
  text-transform uppercase

  &:hover
    box-shadow 1px 1px 8px 0 rgba(#000,.5)

  &_submit
    background #00A8DF
    color #fff
    text-decoration none

    &:hover
      background rgba(#00A8DF,.8)

.btn-menu
  position: relative
  z-index: 1
  padding: 0 10px
  width: 40px
  height: 40px
  cursor: pointer
  span
    width: 100%
    height: 2px
    display: block
    background: #000;

    &:not(:first-child)
      margin-top: 4px

.btn-logo
  position: relative
  z-index: 1

.button
  line-height 4rem
  text-align center
  width 100%
  max-width 480px
  margin 0 auto
  display block
  font-size 1.6rem
  font-weight 700
  min-width 240px
  padding 0 15px
  box-shadow 1px 1px 5px 0 rgba(#000,.5)
  transition box-shadow .2s ease-out, background .2s ease-out
  text-transform uppercase

  &:hover
    box-shadow 1px 1px 8px 0 rgba(#000,.5)

  &_submit
    background #fbbe00
    color #fff
    text-decoration none

    &:hover
      background rgba(#fbbe00,.95)

.btn-menu
  position: relative
  z-index: 1
  padding: 0 10px
  width: 40px
  height: 40px
  cursor: pointer
  span
    width: 100%
    height: 2px
    display: block
    background: #fff

    &:not(:first-child)
      margin-top: 4px

.btn-logo
  position: relative
  z-index: 1

.btn-account
  width: 40px
  height: 40px
  text-decoration: none
  text-align: center
  display: block
  &:before
    content ''
    width: 0
    height: 100%
    display: inline-block
    vertical-align: middle
  .svg-user
    width: 16px
    height: 16px
    fill #fff
    margin-bottom: 0
    vertical-align: middle
    display: inline-block

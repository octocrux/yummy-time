.i-logo
  display block
  position fixed
  width 100px
  line-height 50px
  left 0
  top 0
  margin 0 auto
  right 0
  text-decoration none
  transition transform 0.3s linear;
  font-size 1.6rem
  font-weight 700
  color $c-light
  z-index 4
  white-space nowrap

  @media $max767
    ._open &
      transform translateX(80px);


@media $min768
  .i-logo
    color $c-light
    left 120px

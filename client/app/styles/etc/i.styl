.i-logo
  display block
  position fixed
  width 100px
  line-height 50px
  left 0
  top 0
  margin 0 auto
  right 0
  text-decoration none
  transition transform 0.3s linear;
  font-size 1.6rem
  font-weight 700
  color $w
  z-index 4

  .open &
    transform translateX(80px);


@media $max767
  .i-logo
    color $w
    left 120px

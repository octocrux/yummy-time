.wrapper
  overflow hidden

  &__content
    background #D5D5D5
    min-height 100vh
    position relative
    z-index 2
    height 100%
    transition transform 0.3s linear;
    margin-left 120px
    background linear-gradient(to top, rgba($b, .2), rgba($b, .3)), url(img/bg-b.jpg)
    background-position center
    background-size cover
    background-repeat no-repeat

    &:before
      position absolute
      content ''
      display block
      width 2px
      height 100%
      right 100%
      top 0
      background linear-gradient(to left, rgba($b,.2), rgba($w,.0))

.wrapper
  height 100%
  min-height 100vh

.container
  padding 0 15px

@media $w767
  .wrapper
    overflow hidden

    &__content
      width 100%
      margin-left 0
      background-image linear-gradient(to top, rgba($b, .2), rgba($b, .3)), url(img/bg-s.jpg)

      .open &
        transform translateX(80px);

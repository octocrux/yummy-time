.wrapper
  overflow: hidden
  &__content
    background #D5D5D5
    position: relative
    z-index: 2
    height: 100%
    transition: transform 0.3s ease-out;
    margin-left: 120px
    background linear-gradient(to top, rgba(#000, .2), rgba(#000, .3)), url(img/bg-b.jpg)
    background-position center
    background-size cover
    background-repeat no-repeat
    &:before
      position: absolute
      content ''
      display: block
      width: 2px
      height: 100%
      right: 100%
      top: 0
      background linear-gradient(to left, rgba(#000,.2), rgba(#fff,.0))

.wrapper
.ember-view
  height: 100%
.container
  padding 0 15px

@media only screen and (max-width: 767px)
  .wrapper
    overflow: hidden
    &__content
      width 100%
      margin-left: 0
      background-image linear-gradient(to top, rgba(#000, .2), rgba(#000, .3)), url(img/bg-s.jpg)
      &.open
        transform translateX(80px);

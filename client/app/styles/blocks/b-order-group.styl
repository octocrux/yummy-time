.b-order-group
  &:not(:first-child)
    margin-top: 10px

  &__wrapper
    cursor pointer
    padding 10px
    box-shadow 1px 1px 5px 0 rgba($bs-dark,.5)
    background $bg-light
    transition box-shadow .2s ease-out

    &:hover
      box-shadow 1px 1px 8px 0 rgba($bs-dark,.5)

  &__person
  &__phone
  &__sum
    color $c-dark

  &__person
    font-size: 16px

  &__phone
  &__sum
    font-size: 14px

  &__summary
    padding: 20px
    background: $bg-light;
    display: none

  &__row
    display flex
    justify-content space-between

    &:not(:first-child)
      margin-top: 5px

  &__checkbox
    width 30px
    height 30px


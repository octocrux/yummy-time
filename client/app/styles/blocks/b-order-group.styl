.b-order-group
  &:not(:first-child)
    margin-top: 10px

  &__wrapper
    cursor pointer
    padding 10px
    box-shadow 1px 1px 5px 0 rgba($bs-dark,.5)
    background $bg-light
    transition box-shadow .2s ease-out

    &:hover
      box-shadow 1px 1px 8px 0 rgba($bs-dark,.5)

  &__person
  &__phone
    color $c-dark

  &__person-name
    font-size $h3-font-size
    line-height 1.6

  &__person-phone
    display block
    font-size $h6-font-size

  &__summary
    padding: 15px
    background: $bg-light;
    display: none

  &__row
    display flex
    justify-content space-between

    &:not(:first-child)
      margin-top: 5px

  &__checkbox
    width 30px
    height 30px


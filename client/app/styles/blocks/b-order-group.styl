.b-order-group
  &:not(:first-child)
    margin-top: 10px

  &__wrapper
    cursor pointer
    padding 10px
    box-shadow 1px 1px 5px 0 rgba($bs-dark,.5)
    background $bg-light
    transition box-shadow .2s ease-out

    &:hover
      box-shadow 1px 1px 8px 0 rgba($bs-dark,.5)

  &__person
    color $c-dark
    font-size $h3-font-size

  &__summary
    padding 15px 15px 15px 8px
    background $bg-light
    display none

  &__row
    display flex
    justify-content space-between
    align-items center

    &:not(:first-child)
      margin-top 5px

  &__checkbox
    width 30px
    height 30px
    position relative
    margin-right: 1px

    .checkbox__text
      position absolute
      left 0
      top 0
      right 0
      bottom 0
      margin auto


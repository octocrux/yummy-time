.button
  line-height: 40px
  text-align: center
  display: block
  max-width 480px
  margin 0 auto
  display: block
  font-size: 16px
  font-weight: 700
  box-shadow 1px 1px 5px 0 rgba(#000,.5)
  transition box-shadow .2s ease-out, background .2s ease-out
  text-transform: uppercase
  &:hover
    box-shadow 1px 1px 8px 0 rgba(#000,.5)

  &_submit
    background #00A8DF
    color #fff
    text-decoration: none
    &:hover
      background rgba(#00A8DF,.8)



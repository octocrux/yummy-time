.b-order
  color $c-light
  max-width 420px
  margin 0 auto

  &__description
    margin-bottom 20px

  &__content
    margin-bottom 20px

  &__title
    font-size 2.2rem
    font-weight 700
    text-align center
    margin-bottom 20px

  &__info
    display: flex

    &:not(:first-child)
      margin-top: 10px
      border-top: 1px solid rgba($bs-dark,.5)

  &__row
    display flex
    justify-content space-between

    &:not(:first-child)
      margin-top: 5px

  &__actions
    display flex
    justify-content space-between
    align-items center

    .button
      width 50%
      min-width 0
      line-height 1.2
      padding 10px

      &:not(:first-child)
        margin-left: 30px

.f-default
  color $c-light
  max-width 420px
  margin 0 auto 20px

  &__wrapper
    border-radius 3px
    background $bg-light
    padding 2px 10px
    margin-bottom 10px

  &__row
    position relative

    &:not(:first-child)
      &:before
        content ''
        position absolute
        top 0
        left 0
        width 100%
        border-top 1px solid rgba($bg-dark,.33)

  &__title
    font-size 2.2rem
    font-weight 700
    text-align center
    margin-bottom 20px

  &__label
    font-weight 700
    color $c-dark
    font-size 1.4rem
    margin-bottom 4px
    display block

  &__error
    float left
    margin-top -(x = 1rem)
    font-size x
    color red

  &__field
    display block
    width 100%
    border none
    padding 0 10px
    height 3.6rem
    font-size 1.4rem
    color $c-dark
    background transparent

    &:focus
      outline none

    &::placeholder
      font-size 1.4rem
      color rgba($c-dark,.33)

  &__textarea
    display block
    width 100%
    border none
    padding 5px 10px
    resize none
    font-size 1.4rem

    &:focus
      outline none

    &::placeholder
      font-size 1.4rem
      color rgba($c-dark,.33)


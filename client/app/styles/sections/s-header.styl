.s-header
  display none

@media (max-width: 767px)
  .s-header
    display: flex
    justify-content: space-between;
    align-items: center
    position fixed
    top 0
    left 0
    width: 100%
    height 50px
    padding: 0 20px
    box-shadow 0 0 3px 0 rgba(#000, 30)
    &__title
      line-height: 50px
      position: absolute
      top: 0
      bottom: 0
      left: 0
      right: 0
      text-align: center
      font-size: 1.4rem
      color: #000

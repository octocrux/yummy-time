<form class="form checkout-form">

  <h2 class="form__title">Оформление заказа</h2>

  <div class="form__row">

   {{#each model as |portion|}}
   <div class="portion-list__item">
    <div class="order-preview__row">
     <span class="portion-list__member">Вася</span>
     <span class="portion-list__cost">{{portion.cost}}</span>
     <div class="portion-list__paied">
      <label class="form__checkbox-label">
        <input type="checkbox" class="form__checkbox"/>
        <span class="form__checkbox-text"></span>
      </label>
    </div>
  </div>
  <div class="order-preview__row">
    <div class="list-member__text">{{portion.text}}</div>
  </div>
</div>
{{/each}}

<button {{action "submit"}} type="submit" class="button button_submit">Сформировать</button>
</div>

<div class="form__row">
  <textarea class="form__textarea" rows="4" required></textarea>
  <button {{action "submit"}} type="submit" class="button button_submit">Отправить уведомление</button>
</div>

</form>

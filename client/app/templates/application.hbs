  <a href="/" class="i-logo">Yummy Time</a>
  <header class="s-header">
    <button class="btn-menu" aria-label="toggle site menu" {{action "slide"}}>
      <span></span>
      <span></span>
      <span></span>
    </button>

    {{#if session.isAuthenticated}}
      <button class="btn-logout" {{action 'invalidateSession'}}>
        <svg class="svg-logout" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 19 20">
          <path d="M13 0v2H3v1H2v14h1v1h10v2H2v-1H1v-1H0V2h1V1h1V0"/>
          <path d="M6 9v2h9v3h1v-1h1v-1h1v-1h1V9h-1V8h-1V7h-1V6h-1v3"/>
        </svg>
      </button>
    {{/if}}
  </header>

  <div class="wrapper__content">
    <section class="s-content">
      <div class="container">
        {{outlet}}
      </div>
    </section>
  </div>
</div>
